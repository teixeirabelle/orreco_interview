<section class="card">
  <div class="data-section">
    <img
      class="image-large margin-right"
      width="56"
      height="56"
      src={{if @athlete.photoUrl @athlete.photoUrl "/assets/no-photo.png"}}
      alt="athlete_avatar"
    />
    <div class="heading-3 athlete-data">
      <div>
        Name:
        <span class="subheading-small">
          {{@athlete.fullName}}
        </span>
      </div>
      <div>Age:
        <span class="subheading-small">
          {{@athlete.age}}
        </span></div>
      <div>Heigh:
        <span class="subheading-small">
          {{@athlete.height}}
          {{@athlete.heightMeasure}}
        </span>
      </div>
      <div>Sport:
        <span class="subheading-small">
          {{@athlete.sport}}
        </span></div>
      <div>Weight:
        <span class="subheading-small">
          {{@athlete.weight}}
          {{@athlete.weightMeasure}}
        </span>
      </div>
      {{#if @athlete.tour}}
        <div>Tour:
          <span class="subheading-small">
            {{@athlete.tour}}
          </span>
        </div>
      {{/if}}
      {{#if @athlete.team}}
        <div>Team:
          <span class="subheading-small">
            {{@athlete.team}}
          </span>
        </div>
      {{/if}}
    </div>
  </div>
  <div class="button-section">
    <Button
      @text="Sleep data"
      @route="athlete.sleeps"
      @model="{{@athlete.id}}"
    />
  </div>
</section>

{{yield}}